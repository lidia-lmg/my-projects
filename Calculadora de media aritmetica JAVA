import java.util.Scanner;
class Main {
  public static void main (String[]args){
    Scanner ler = new Scanner (System.in);
      int N;
      double somatorio=0; 
        System.out.println ("Digite a quantidade de números que deseja fazer a média: ");
           N = ler.nextInt(); 
          
  System.out.println("Digite abaixo a sequencia de números: ");
    int[] vetor = new int[N];
      for (int i = 0; i < N; i++){
       System.out.print("No "+(i+1)+":");
         vetor[i]= ler.nextInt();
        somatorio+=vetor[i];
    }
      double total = somatorio/N;
        System.out.println ("A média é de: "+total);

  }
}
